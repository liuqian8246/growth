<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dip_14"
        android:background="@color/colorWhite"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dip_18"
                android:layout_height="@dimen/dip_18"
                android:layout_marginLeft="@dimen/dip_20"
                android:src="@drawable/back" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_6"
            android:layout_weight="1"
            android:text="购买记录"
            android:textColor="@color/colorText3"
            android:textSize="@dimen/sp_20" />

        <ImageView
            android:id="@+id/iv_bianji"
            android:layout_width="@dimen/dip_22"
            android:layout_height="@dimen/dip_22"
            android:layout_marginRight="@dimen/dip_33"
            android:src="@drawable/cjzh_bj3x" />

    </LinearLayout>

</layout>