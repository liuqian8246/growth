<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/dip_81"
            android:layout_height="@dimen/dip_81"
            android:layout_marginTop="@dimen/dip_95"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_3x"/>

        <TextView
            android:layout_marginLeft="@dimen/dip_39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/hintColor"
            android:text="请输入手机号"
            android:layout_marginTop="@dimen/dip_81"/>

        <EditText
            android:id="@+id/tv_oldpassword"
            android:layout_marginRight="@dimen/dip_39"
            android:layout_marginLeft="@dimen/dip_39"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/sp_15"
            android:text="45454545454"
            android:layout_marginTop="@dimen/dip_5"
            android:textColor="@color/colorText3"
            />

        <View
            android:layout_marginTop="@dimen/dip_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_1"
            android:layout_marginLeft="@dimen/dip_39"
            android:layout_marginRight="@dimen/dip_39"
            android:background="@color/colorText_d8d8d8"/>

        <TextView
            android:layout_marginLeft="@dimen/dip_39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/hintColor"
            android:text="请设置密码"
            android:layout_marginTop="@dimen/dip_29"/>

        <EditText
            android:id="@+id/et_newpassword"
            android:layout_marginRight="@dimen/dip_39"
            android:layout_marginLeft="@dimen/dip_39"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/sp_15"
            android:inputType="textPassword"
            android:text="45454545454"
            android:layout_marginTop="@dimen/dip_5"
            android:textColor="@color/colorText3"
            />

        <View
            android:layout_marginTop="@dimen/dip_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_1"
            android:layout_marginLeft="@dimen/dip_39"
            android:layout_marginRight="@dimen/dip_39"
            android:background="@color/colorText_d8d8d8"/>


        <TextView
            android:layout_marginLeft="@dimen/dip_39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/hintColor"
            android:text="请输入验证码"
            android:layout_marginTop="@dimen/dip_29"/>

        <LinearLayout
            android:layout_marginRight="@dimen/dip_39"
            android:layout_marginLeft="@dimen/dip_39"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_yzm"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="@dimen/sp_15"
                android:text="45454545454"
                android:singleLine="true"
                android:layout_marginTop="@dimen/dip_5"
                android:textColor="@color/colorText3" />


            <include layout="@layout/layout_text_get_yzm"
                android:id="@+id/getyzm"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dip_26"/>

        </LinearLayout>


        <View
            android:layout_marginTop="@dimen/dip_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_1"
            android:layout_marginLeft="@dimen/dip_39"
            android:layout_marginRight="@dimen/dip_39"
            android:background="@color/colorText_d8d8d8"/>


        <Button
            android:id="@+id/btn_register"
            android:text="注册"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_45"
            android:background="@drawable/background_histort_button"
            android:layout_marginLeft="@dimen/dip_40"
            android:layout_marginRight="@dimen/dip_40"
            android:layout_marginTop="@dimen/dip_29"
            android:layout_marginBottom="@dimen/dip_40"/>

    </LinearLayout>
</layout>