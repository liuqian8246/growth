<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_subject"
                android:layout_marginTop="@dimen/dip_28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colorText3"
                android:text="年纪选择"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_marginTop="@dimen/dip_45"
                android:layout_marginLeft="@dimen/dip_81"
                android:layout_marginRight="@dimen/dip_81"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/dip_20"
                android:layout_marginLeft="@dimen/dip_20"
                android:layout_height="@dimen/dip_41"
                android:layout_marginBottom="@dimen/dip_20"
                android:text="保存"
                android:background="@drawable/background_button_save_setting"
                android:layout_marginTop="@dimen/dip_62"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_15"/>

        </LinearLayout>
    </ScrollView>

</layout>