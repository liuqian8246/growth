<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <include layout="@layout/layout_title_bar"
            android:id="@+id/title_bar"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_41"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_12"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dip_60"
                    android:layout_height="@dimen/dip_24"
                    android:background="@drawable/background_item_kecheng"
                    android:gravity="center"
                    android:text="昵称"
                    android:textColor="@color/colorText10"
                    android:textSize="@dimen/sp_13" />

                <EditText
                    android:id="@+id/tv_nicheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_25"
                    android:background="@null"
                    android:hint="请输入昵称"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorText10"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dip_18"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dip_1"
                android:background="@color/colorText_d8d8d8"
                android:layout_marginLeft="@dimen/dip_12"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dip_60"
                    android:layout_height="@dimen/dip_24"
                    android:gravity="center"
                    android:text="昵称"
                    android:textColor="@color/colorText10"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tv_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_25"
                    android:background="@null"
                    android:hint="请输入昵称"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorText10"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/btn_seemore"
            android:text="确定"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_45"
            android:background="@drawable/background_histort_button"
            android:layout_marginLeft="@dimen/dip_40"
            android:layout_marginRight="@dimen/dip_40"
            android:layout_marginTop="@dimen/dip_310"
            android:layout_marginBottom="@dimen/dip_40"/>

    </LinearLayout>
</layout>

