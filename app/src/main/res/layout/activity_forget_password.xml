<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dip_81"
            android:layout_height="@dimen/dip_81"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dip_95"
            android:src="@drawable/icon_3x" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_39"
            android:layout_marginTop="@dimen/dip_81"
            android:text="请输入手机号"
            android:textColor="@color/hintColor"
            android:textSize="@dimen/sp_13" />

        <EditText
            android:id="@+id/tv_oldpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_39"
            android:layout_marginRight="@dimen/dip_39"
            android:layout_marginTop="@dimen/dip_5"
            android:background="@null"
            android:hint="手机号码"
            android:textColor="@color/colorText3"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_1"
            android:layout_marginLeft="@dimen/dip_39"
            android:layout_marginRight="@dimen/dip_39"
            android:layout_marginTop="@dimen/dip_2"
            android:background="@color/colorText_d8d8d8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_39"
            android:layout_marginTop="@dimen/dip_29"
            android:text="请输入验证码"
            android:textColor="@color/hintColor"
            android:textSize="@dimen/sp_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_39"
            android:layout_marginRight="@dimen/dip_39"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_yzm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dip_5"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:hint="验证码"
                android:text=""
                android:textColor="@color/colorText3"
                android:textSize="@dimen/sp_15" />


            <include
                android:id="@+id/getyzm"
                layout="@layout/layout_text_get_yzm"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dip_26" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_1"
            android:layout_marginLeft="@dimen/dip_39"
            android:layout_marginRight="@dimen/dip_39"
            android:layout_marginTop="@dimen/dip_2"
            android:background="@color/colorText_d8d8d8" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_39"
            android:layout_marginTop="@dimen/dip_29"
            android:text="请输入新密码"
            android:textColor="@color/hintColor"
            android:textSize="@dimen/sp_13" />

        <EditText
            android:id="@+id/et_newpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_39"
            android:layout_marginRight="@dimen/dip_39"
            android:layout_marginTop="@dimen/dip_5"
            android:background="@null"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColor="@color/colorText3"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_1"
            android:layout_marginLeft="@dimen/dip_39"
            android:layout_marginRight="@dimen/dip_39"
            android:layout_marginTop="@dimen/dip_2"
            android:background="@color/colorText_d8d8d8" />


        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_45"
            android:layout_marginBottom="@dimen/dip_40"
            android:layout_marginLeft="@dimen/dip_40"
            android:layout_marginRight="@dimen/dip_40"
            android:layout_marginTop="@dimen/dip_29"
            android:background="@drawable/background_histort_button"
            android:text="确定"
            android:textColor="@color/colorWhite" />

    </LinearLayout>
</layout>