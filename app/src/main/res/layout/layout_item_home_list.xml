<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dip_10"
    android:layout_marginBottom="@dimen/dip_10"
    android:orientation="horizontal">

    <cn.lanhu.android_growth_plan.gaiban.mvvm.view.widget.RoundImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dip_62"
        android:layout_height="@dimen/dip_62"
        android:src="@color/colorRed"
        android:layout_gravity="center"
        app:RoundImageViewRadius="@dimen/dip_4"
        app:RoundImageViewType="RoundImageViewRound" />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教学那点事"
                android:layout_marginLeft="@dimen/dip_10"
                android:textColor="@color/colorText3"
                android:textSize="@dimen/sp_15"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-01-12"
                android:gravity="right"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorText6"
                android:layout_marginRight="@dimen/dip_17"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="我们是做游戏运营的   去年3月份 文化局就不给游戏备案了 所以才没事做，现在开始审批了，版号下来，2个月内就得上市"
            android:textColor="@color/colorText10"
            android:layout_marginRight="@dimen/dip_17"/>
    </LinearLayout>

</LinearLayout>