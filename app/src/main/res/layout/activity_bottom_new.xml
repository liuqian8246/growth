<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_50"
        android:background="@drawable/home_bottom_view_bg"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:id="@+id/ll_shouye"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_shishi"
                android:layout_width="@dimen/dip_26"
                android:layout_height="@dimen/dip_26"
                android:padding="@dimen/dip_1"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_shishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:layout_marginTop="@dimen/dip_2"
                android:textSize="@dimen/text_size_10"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_xuexi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
           >

            <ImageView
                android:id="@+id/iv_xuexi"
                android:layout_width="25dp"
                android:layout_height="@dimen/dip_26"
                android:padding="@dimen/dip_2"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_xuexi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_2"
                android:text="学习"
                android:textSize="@dimen/text_size_10"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_jihua"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView

                android:id="@+id/iv_jihua"
                android:layout_width="@dimen/dip_26"
                android:layout_height="@dimen/dip_26"
                android:padding="@dimen/dip_1"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_jihua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_2"
                android:text="计划"
                android:textSize="@dimen/text_size_10"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_3"
            android:paddingTop="@dimen/padding_3">

            <ImageView
                android:id="@+id/iv_mine"
                android:layout_width="@dimen/dip_50"
                android:layout_height="@dimen/dip_26"
                android:layout_marginBottom="@dimen/dip_2"
                android:layout_marginLeft="@dimen/margin_3"
                android:layout_marginTop="@dimen/dip_2" />

            <TextView
                android:id="@+id/tv_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textSize="@dimen/text_size_10"/>
        </LinearLayout>

    </LinearLayout>

</layout>
